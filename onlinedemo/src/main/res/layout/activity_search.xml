<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.onlinedemo.SearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#c2041a">

        <ImageView
            android:id="@+id/search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_brows_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="影片搜索"
            android:textSize="18dp"
            android:textColor="#b1b1b1"
            android:textStyle="bold"

            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_poi"
            android:layout_width="217dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/info_et" />

        <Button
            android:id="@+id/btn_poi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="搜索" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_poi"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
